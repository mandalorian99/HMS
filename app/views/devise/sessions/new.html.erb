<!-- Sing in  Form -->
<section class="sign-in">
  <div class="container customcontainer">
    <div class="signin-content">
      <div class="signin-image">
        <figure><img src="<%= asset_path('signin-image.jpg') %>" alt="sing up image"></figure>
        <a href="#" class="signup-image-link">Create an account</a>
      </div>
      <div class="signin-form">
        <h2 class="form-title">Login</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html=> { class: "register-form", id:"login-form" }) do |f| %>
            <div class="form-group">
              <label for="user_email"><i class="zmdi zmdi-account material-icons-name"></i></label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Your email" %>
            </div>
            <div class="form-group">
              <label for="user_password"><i class="zmdi zmdi-lock"></i></label>
              <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password" %>
            </div>
            <div class="form-group">
              <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" />
              <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label>
            </div>
            <div class="form-group form-button">
            <%= f.submit "Log in", class:"form-submit" %>
            </div>
          <%end%>
        <div class="social-login">
            <span class="social-label">Or login with</span>
            <ul class="socials">
                <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook fa fa-facebook-f"></i></a></li>
                <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter fa fa-twitter"></i></a></li>
                <li><a href="#"><i class="display-flex-center zmdi zmdi-google fa fa-google"></i></a></li>
            </ul>
        </div>
      </div>
    </div>
  </div>
</section>
