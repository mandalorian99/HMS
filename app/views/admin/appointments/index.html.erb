  <div class="row">
    <div class="col-lg-4">
      <h3>All Appointments</h3>
    </div> 
  
    <div class="col-lg-6"></div>
  
    <div class="col-lg-2">
      <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#popup">
        Add Apointment
      </a>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-12">
      <%= render 'table' %>
      <div class="paginationbox">
        <%= paginate @appointments, theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="popup" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Add New Appointment</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <%= form_for @appointment, url:{action:'create'}, remote:true do |f|%>
          <%= render 'form', :f=>f%>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
