<div class ="row">
   <div class="col-lg-12">
   <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>Id</th>
        <th>Email</th>
        <th>Firstname</th>
        <th>Civil Id</th>
        <th>Department</th>
        <th>Role</th>
        <th>Edit</th>
        <th>Delete</th>
        
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user|%>
        <tr>
           <td><%= user.id%></td>
           <td><%= user.email%></td>
           <td><%= user.firstname%></td>
           <td><%= user.civil_id%></td>
           <td><%= user.department%></td>
           <td>
              <% if user.role =='admin' %>
                     <i class="fa fa-ambulance"></i>
                 <% elsif user.role == 'doctor' %>
                     <i class="fa fa-user-md"></i>                  
                  <% elsif user.role == 'nurse' %>
                  <i class="fa fa-user"></i>
                  <% else %>
                  <i class="fa fa-user"></i>
              <% end %>

           </td>
           <td>
              <a href="<%= edit_admin_user_path(user)%>" >
                 <i class="fa fa-edit"></i>
              </a>
           </td>
           <td>
               <%= link_to admin_user_path(user), method: :delete do%>
                <i class="fa fa-trash"></i>
              <% end %>
           </td>
           
        </tr>
      <% end %>
    </tbody>
  </table>   

   </div>
</div>