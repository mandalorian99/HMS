<div class ="row">
   <div class="col-lg-12">
   <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>Id</th>
        <th>Ward Name</th>
        <th>Ward Type</th>
        <th>Status</th>
        <th>Action</th>    
      </tr>
    </thead>
    <tbody>
      <% @wards.each do |ward|%>
        <tr>
           <td><%= ward.id %></td>
           <td><%= ward.ward_name%></td>
           <td><%= ward.ward_type%></td>
           <td><%= ward.status %></td> 
           <td>
              <a href="#" class="btn btn-info">Edit</a>
              <a href="#" class="btn btn-warning">Empty</a>
              <%= link_to 'Delete', admin_ward_path(ward), method: :delete, remote: true, class: 'btn btn-danger delete_row'%>
           </td>          
        </tr>
      <% end %>
    </tbody>
  </table>   

   </div>
</div>